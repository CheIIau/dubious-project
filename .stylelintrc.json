{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "value-keyword-case": [
            "lower",
            {
                "ignoreProperties": ["--font-family-main"]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "extends",
                    "apply",
                    "tailwind",
                    "components",
                    "utilities",
                    "screen"
                ]
            }
        ]
    }
}
