{
    "compilerOptions": {
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "noImplicitAny": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "target": "ES6",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"],
            "@/*": ["./src/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "NodeNext"
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
